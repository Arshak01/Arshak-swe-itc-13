{
  "settings": {
    "react": {
      "version": "detect"
    },
    "import/resolver": {
      "node": {
        "extensions": [".js", ".jsx", ".ts", ".tsx"]
      }
    }
  },
  "env": {
    "browser": true,
    "es2021": true,
    "node": true,
    "jasmine": true,
    "jest/globals": true
  },
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "extends": [
    "eslint:recommended",
    "plugin:import/errors",
    "plugin:import/warnings",
    "plugin:react/recommended",
    "plugin:prettier/recommended"
  ],
  "plugins": ["react", "react-hooks", "import", "prettier", "jest"],
  "rules": {
    "no-else-return": [
      0,
      {
        "allowElseIf": true
      }
    ],
    "react-hooks/rules-of-hooks": "error",
    "react-hooks/exhaustive-deps": "warn",
    "semi": ["error", "always"],
    "sort-imports": [
      "warn",
      {
        "ignoreDeclarationSort": true,
        "memberSyntaxSortOrder": ["all", "single", "multiple", "none"]
      }
    ],
    "quotes": ["error", "single"],
    "import/named": 2,
    "import/default": 2,
    "import/namespace": 2,
    "import/export": 2,
    "import/no-named-as-default": 0,
    "prettier/prettier": ["error", {}],
    "no-confusing-arrow": 0,
    "no-console": [
      1,
      {
        "allow": ["warn", "error"]
      }
    ],
    "no-use-before-define": [
      "error",
      {
        "functions": false,
        "classes": true
      }
    ],
    "no-multiple-empty-lines": [
      "error",
      {
        "max": 1,
        "maxBOF": 0
      }
    ],
    "no-plusplus": 0,
    "no-restricted-syntax": 0,
    "no-mixed-operators": 0,
    "no-await-in-loop": 1,
    "no-param-reassign": 0, // We love param reassignment.
    "no-shadow": 0, // Shadowing is a nice language feature.
    "quote-props": 0,
    "prefer-template": 2,
    "max-len": [
      1,
      100,
      2,
      {
        "ignoreStrings": true,
        "ignoreTemplateLiterals": true,
        "ignoreUrls": true,
        "ignoreTrailingComments": true
      }
    ],
    "global-require": 2, //must be 2
    "comma-dangle": 0, // must be 2
    "consistent-return": 0,
    "object-curly-newline": [
      "error",
      {
        "consistent": true
      }
    ],
    "indent": 0,
    "prefer-promise-reject-errors": 0
  }
}
